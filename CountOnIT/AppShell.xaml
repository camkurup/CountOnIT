<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CountOnIT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CountOnIT"
    xmlns:views="clr-namespace:CountOnIT.Views">

    <TabBar>
        <ShellContent Icon="usage.svg"
                     ContentTemplate="{DataTemplate views:UsagePage}" />
        <ShellContent Icon="shoppingbasket.svg"
                     ContentTemplate="{DataTemplate views:OrderingPage}" />
        <ShellContent Icon="favorits.svg"
                     ContentTemplate="{DataTemplate views:FavoritsPage}" />
        <ShellContent Icon="profile.svg"
                     ContentTemplate="{DataTemplate views:ProfilePage}" />
    </TabBar>
</Shell>
