<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountOnIT.Views.ProductView">
    <VerticalStackLayout>

        <Grid >     
            <Image Source="ikon1.png"
                   Margin="70"/>
            
        </Grid>

        <StackLayout BackgroundColor="#f2f2f2">
                <Label Text="Produktnavn"
                       Margin="20,20,0,0"
                       FontSize="20"/>
                <Label Text="Antal på lager: 201stk."
                       Margin="20,40,0,0"/>

                <HorizontalStackLayout Margin="20">
                    <Button Text="-"/>
                    <Label Text="0"
                           Margin="10"
                           FontSize="20"/>
                    <Button Text="+"/>
                </HorizontalStackLayout>
                <Button Text="Læg i Kurv"
                        Margin="20,10,200,0"/>
            <Label Text="Detaljer  V" Margin="20,60,0,5000"/>
        </StackLayout>

    </VerticalStackLayout>
</ContentView>
