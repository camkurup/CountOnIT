<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CountOnIT.Views.ProductListView">
    <VerticalStackLayout>
        <ScrollView Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

      
                <Image Grid.Row="0" Grid.Column="0" Source="{Binding ProductImageLink}" Background="Blue"/>
           
                <Image Grid.Row="1" Grid.Column="1" Source="ikon2.png" Background="Blue"/>

                <Image Grid.Row="2" Grid.Column="0" Source="ikon1.png" Background="Blue"/>

                <Image Grid.Row="3" Grid.Column="1" Source="ikon2.png" Background="Blue"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentView>
